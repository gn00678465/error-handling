{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "webworker"
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@error-handling/core": [
        "./packages/core/src/index.ts"
      ],
      "@error-handling/core/*": [
        "./packages/core/src/*"
      ]
    },
    "resolveJsonModule": true,
    "types": [
      "vitest"
    ],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "*.ts"
  ],
  "exclude": [
    "types/**",
    "node_modules",
    "**/dist",
    "**/*.md"
  ]
}
